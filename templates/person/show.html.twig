{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Affiliation</th>
                <td>{{ person.affiliation }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ person.country }}</td>
            </tr>
            <tr>
                <th>Orcid</th>
                <td>{{ person.orcid }}</td>
            </tr>
            <tr>
                <th>Show_in_list</th>
                <td>{{ person.showInList ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Show_mail_in_list</th>
                <td>{{ person.showMailInList ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('person_index') }}">back to list</a>

    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
