{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <h1>Person index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Affiliation</th>
                <th>Country</th>
                <th>Orcid</th>
                <th>Show_in_list</th>
                <th>Show_mail_in_list</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.name }}</td>
                <td>{{ person.affiliation }}</td>
                <td>{{ person.country }}</td>
                <td>{{ person.orcid }}</td>
                <td>{{ person.showInList ? 'Yes' : 'No' }}</td>
                <td>{{ person.showMailInList ? 'Yes' : 'No' }}</td>
                <td>{{ person.email }}</td>
                <td>
                    <a href="{{ path('person_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('person_new') }}">Create new</a>
{% endblock %}
