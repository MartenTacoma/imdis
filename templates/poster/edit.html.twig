{% extends 'base.html.twig' %}

{% set pagetitle = 'Edit Poster' %}

{% block body %}
    <a href="{{ path('poster_index') }}">back to list</a>
    {{ include('poster/_form.html.twig', {'button_label': 'Update'}) }}

    <h2>Poster details (not updated when changing values above!)</h2>
    {% if poster.abstract %}
        {{poster.abstract}}<br/>
        {% for person in poster.abstract.people %}{% if not loop.first %}, {% endif %}{% if person.isPresenter %}<strong>{{person.name}}</strong>{% else %}{{person.name}}{% endif %}{% endfor %}
    {% endif %}
    
    <h3>Consent given by</h3><ul>
    {% for user in poster.users %}
        <li>{{user.user.name}}, {{user.user.email}}</li>
    {% else %}
        <li>Nobody</li>
    {% endfor %}

    {# {{ include('poster/_delete_form.html.twig') }} #}
{% endblock %}
