<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{ pagetitle ?? 'Welcome' }} | IMDIS 2021</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="/style/icomoon/style.css" media="screen"/>
            {{ encore_entry_link_tags('app') }}{% endblock %}
{#}        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>#}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        {% include 'base/blocks/top.twig' %}
        {% include 'base/blocks/menu.twig' %}
        <div id="content">
            <div class="content">
                <h1>{{ pagetitle ?? 'Welcome' }}</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% block head %}{% endblock %}
        
                {% block body %}
                    <div class="cols">
                        <div class="side">{% block side %}{% endblock %}</div>
                        <div class="main">{% block main %}{{ content }}{% endblock %}</div>
                    </div>
                {% endblock %}
            </div>
        </div>
        {% include 'base/blocks/foot.twig' %}
    </body>
</html>
